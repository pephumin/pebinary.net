---
title: "Search index using fulltext search"
permalink: /search/search-B_fulltext.json
layout:
search: exclude
---

[
{% for collection in site.collections %}
  {% for item in collection.docs %}
    {% unless first %},{% endunless %}
      {
      "title"       : "{{ item.title | escape }}",
      "section"     : "{{ item.section }}",
      "sectionurl"  : "{{ item.section | append: '/' | prepend: '/' | prepend: site.baseurl }}",
      "category"    : "{{ item.category }}",
      "categoryurl" : "{{ item.category | append: '/' | prepend: '/' | prepend: item.section | prepend: '/' | prepend: site.baseurl }}",
      "tags"        : "{{ item.tags | join: ', ' }}",
      "url"         : "{{ site.baseurl }}{{ item.url }}",
      "content"     : {{ mm.content | markdownify | strip_html | strip_newlines | remove_chars | smartify | escape | xml_escape | jsonify }}
      }
    {% assign first = false %}
  {% endfor %}
{% endfor %}
]
