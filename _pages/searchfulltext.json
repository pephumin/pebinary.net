---
title: "Full text search the website"
permalink: /searchfulltext.json
layout:
search: exclude
---
[
  {% for mm in site.members %}
    {
      "title"    : "{{ mm.title | escape }}",
      "section"  : "{{ mm.section }}",
      "category" : "{{ mm.category | join: ', ' }}",
      "tags"     : "{{ mm.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ mm.url }}",
      "content"  : "{{ mm.content | strip_html | strip_newlines }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
  ,
  {% for cc in site.clients %}
    {
      "title"    : "{{ cc.title | escape }}",
      "section"  : "{{ cc.section }}",
      "category" : "{{ cc.category | join: ', ' }}",
      "tags"     : "{{ cc.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ cc.url }}",
      "content"  : "{{ mm.content | strip_html | strip_newlines }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
